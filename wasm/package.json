{
  "name": "@zelcore/zano-wallet-wasm",
  "version": "1.0.0",
  "description": "Zano cryptocurrency wallet library compiled to WebAssembly for browser and Node.js environments",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "_install/zano_wallet.js",
    "_install/zano_wallet.wasm",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:wasm": "bash build-wasm.sh",
    "build:js": "rollup -c rollup.config.mjs",
    "build": "npm run build:wasm && npm run build:js",
    "dev": "rollup -c rollup.config.mjs --watch",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose tests/unit",
    "test:integration": "vitest run --reporter=verbose tests/integration",
    "test:browser": "playwright test",
    "lint": "eslint js/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist _build _install",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "zano",
    "cryptocurrency",
    "wallet",
    "wasm",
    "webassembly",
    "blockchain",
    "privacy"
  ],
  "author": "ZelCore Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zelcore/zano-wallet-wasm.git"
  },
  "bugs": {
    "url": "https://github.com/zelcore/zano-wallet-wasm/issues"
  },
  "homepage": "https://github.com/zelcore/zano-wallet-wasm#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/emscripten": "^1.39.10",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "playwright": "^1.40.1",
    "rollup": "^4.9.6",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker.mjs",
      "types": "./dist/worker.d.ts"
    },
    "./wasm": "./install/zano_wallet.wasm"
  }
}
